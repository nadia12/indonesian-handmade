<% if @tutorials != [] %>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
      </tr>
    </thead>
    <tbody>
      <% number = 0 %>
      <% @tutorials.each do |tutorial| %> 
      <tr>
        <td><%= number+=1 %></td>
        <td><%= link_to tutorial.title, tutorial %></td>
        <td><%= link_to 'Edit Tutorial', edit_tutorial_path(tutorial) %></td>
        <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><a href="#" data-reveal-id="firstModal<%= tutorial.id %>" class="radius button alert tiny">Delete</a></td>
        <div id="firstModal<%= tutorial.id %>" class="reveal-modal tiny" data-reveal="" style="display: none; opacity: 1; visibility: hidden;">
          <h2>Caution</h2>
          <p>Are you sure to delete?</p>
          <p><%= link_to 'Yes', tutorial, method: :delete, class: 'button tiny' %></p>
          <a class="close-reveal-modal">×</a>
        </div>      
      </tr>
      <% end  %>
    </tbody>
  </table>
        
<% else %>
  <div data-alert="" class="alert-box">
    There Is Nothin Here
    <a href="#" class="close">×</a>
  </div>
<% end %>