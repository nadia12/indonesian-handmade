<div class="panel callout radius">
  <h1>Welcome To Indonesian Handmade</h1>
  <p>It's a little ostentatious, but useful for important content.</p>
</div>

  <div class="large-8 columns">
  <h3> Latest Product <h3>
    <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
    
      <div class="row">
      <% @etalases.each do |etalase| %>
        <div class="large-4 small-6 columns box">
           <%=link_to image_tag(etalase.picture), etalase %>
            <div class="panel">
              <h5><b><%=etalase.title %></b></h5>
              <h5><%=etalase.price %></h5>
              <h7><i>by:<%=etalase.user.name %></i></h7>
          </div>
        </div>
      <% end %>
      </div>
    <%= paginate @etalases %>
    </div>
  </div>
<br>


  <div class="large-8 columns">
  <h3> Latest Tutorial </h3>
    <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
      <div class="row">
      <% @tutorials.each do |tutorial| %>
        <div class="large-4 small-9 columns box">
          <%=link_to image_tag(tutorial.picture), tutorial %>
          <div class="panel">
            <h5><b><%= tutorial.title %></b></h5>
            <h7><i>by:<%=tutorial.user.name %></i></h7>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @tutorials %>
</div>