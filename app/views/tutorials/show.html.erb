<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @tutorial.title %>
</p>
  
<p>
  <strong>Photo:</strong>
  <%= @tutorial.photo %>
</p>

<p>
  <strong>Content:</strong> <br>
  <%= raw @tutorial.content %>
</p>

<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this tutorial from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :post_new_comment %><br>
    <%= f.text_field :content %>
  </div>

  <%= f.hidden_field :commentable_id %>
  <%= f.hidden_field :commentable_type %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% @comments.includes(:user).each do |comment|  %>
  <ul>

    <li><%= image_tag comment.user.avatar_url(:small_thumb), class: "th radius" %> 
        <%= comment.user.name %></li>
    <li><%= comment.content %></li>
  </ul>
<% end %>

