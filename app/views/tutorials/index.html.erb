<h1>Our Tutorials</h1>
<div class="row">
      <!-- Side Bar -->
      <div class="large-4 small-12 columns">

        <%= image_tag 'tutorial.jpg' %>

        <div class="hide-for-small panel">
          <h3>Tutorial</h3>

          <h5 class="subheader">You can share your idea to create some handycraft by your own. Explore your imagination and your idea. Please Share To Us</h5>
          <%= link_to 'Create New Tutorial' , new_tutorial_path, class: 'button callout radius' %><br \>
        </div>

        
        <div class="panel">Choose Your Category
        <ul class="side-nav">
        <% categories = Category.all %>
          <li><%= link_to 'All Category' , tutorials_path, class: 'callout radius' %></li>
          <% categories.each do |category| %> 
          <li><%= link_to category.name , select_tutorials_path(category.id), class: 'callout radius' %></li>
        <% end %>
      </ul>
      </div>
      </div><!-- End Side Bar -->
      <!-- Thumbnails -->

      <div class="large-8 columns">
        <div class="row">
        <% @tutorials.each do |tutorial| %>
          <div class="large-4 small-6 columns">
            <%= image_tag tutorial.picture %>
            <div class="panel">
              <h5><%= link_to tutorial.title, tutorial %></h5>
            </div>
          </div>
        <% end %>
        </div><!-- End Thumbnails -->
        <!-- Managed By -->

      </div>
    </div>

<table>
  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <% if can? :update, tutorial %>
        <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
        <% end %>
        <% if can? :destroy, tutorial %>
        <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>