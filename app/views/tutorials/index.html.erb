<%= link_to 'Create New Tutorial', new_tutorial_path, class: 'button radius right' %>
<h1>Tutorials</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sample Product</th>
      <th></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= link_to tutorial.title, tutorial %></td>
        <td></td>
        <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
        <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>