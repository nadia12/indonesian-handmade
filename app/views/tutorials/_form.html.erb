<%= form_for(@tutorial) do |f| %>
  <% if @tutorial.errors.any? %>
    <div id="">
      <h4><%= pluralize(@tutorial.errors.count, "error") %></h4>
      <% @tutorial.errors.full_messages.each do |msg| %>
          <div data-alert="" class="alert-box small">
            <%= msg %>
            <a href="#" class="close">Ã—</a>
          </div>
      <% end %>
    </div>
  <% end %>

   <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <%= image_tag(@tutorial.picture_url(:thumb_product)) if @tutorial.picture? %>
  <div>
    <%= f.label :sample_picture %>
    <%= f.file_field :picture %>
  </div>
  <div>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <div>
    <%= f.label :content %><br>
    <%= f.cktext_area :content, :cols => 10 , class: 'ckeditor', :ckeditor => {:toolbar => "mini"} %>
  </div>
  <br />
  
  <!-- <p> <label>Are you Robot?</label></p> -->
  <%#= recaptcha_tags :display => { :theme => "clean" }, :ssl => true %>

  <div class="actions">
    <%= f.submit class: 'button' %>
  </div>
<% end %>
