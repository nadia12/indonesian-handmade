<%= form_for(@tutorial) do |f| %>
  <% if @tutorial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tutorial.errors.count, "error") %> prohibited this tutorial from being saved:</h2>

      <ul>
      <% @tutorial.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   <div>
   <%= f.hidden_field :imageable_id %>
   </div>

   <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
   <%= f.fields_for :imageable do |i| %>
    <%= i.label :image, 'Upload Sample Product' %>
    <%= i.file_field :image %>
  </div>

  <div>
    <%= f.label :content %><br>
    <%= f.cktext_area :content, :cols => 4 , :ckeditor => {:toolbar => "mini"} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
